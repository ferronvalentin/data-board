<div class="connexion-form">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form">

            <h2>Nouveau compte utilisateur</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: true, placeholder: "Email", autofocus: false, label: false %>
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), placeholder: "Mot de passe", autofocus: false, label: false  %>
                <%= f.input :password_confirmation, required: true, placeholder: "Confirmez le mot de passe", autofocus: false, label: false %>
                <%= f.input :town_name, required: true, placeholder: "Nom de la commune", autofocus: false, label: false %>
                <%= f.input :phone_number, required: false, placeholder: "Numéro de téléphone", autofocus: false, label: false %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Créer le compte", class: "btn-publish" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
